    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.input :pais_id, collection: Pais.all, label_method: :nome, value_method: :id %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="form-group">
          <%= f.input :uf_id, collection: Uf.all, label_method: :nome %>
