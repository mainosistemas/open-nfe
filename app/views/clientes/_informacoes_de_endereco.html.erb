  </div>

  <div class="box-body">
    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
          <%= f.input :cep %>
        </div>
      </div>
      <div class="col-md-9">
        <div class="form-group">
          <%= f.input :endereco %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
