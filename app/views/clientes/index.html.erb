<table class="table">
  <thead>
    <tr>
      <th>Tipo de pessoa</th>
      <th>CNPJ/CPF</th>
      <th>Raz√£o social</th>
      <th>UF</th>
      <th><%= link_to 'Cadastrar', new_cliente_path %></th>
    </tr>
    <tbody>
      <% @clientes.each do |cliente| %>
        <tr>
          <td><%= cliente.tipo_de_pessoa_codigo %></td>
          <td><%= cliente.numero_do_documento %></td>
          <td><%= cliente.razao_social %></td>
          <td><%= cliente.uf_nome %></td>
          <td>
            <%= link_to('Editar', edit_cliente_path(cliente)) %> /
            <%= link_to 'Deletar', cliente, method: :delete, data: {
              confirm: "Tem certeza que deseja deletar o cliente #{cliente.razao_social}" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </thead>
</table>
